import java.math.BigDecimal;

public class BigDecimalTest
{
	public static void main(String[] args) {
		System.out.println("0.5 + 0.02001 = " + (0.5 + 0.02001));	
		System.out.println("0.05003 - 0.021 = " + (0.05003 - 0.021));
		System.out.println("0.050002 * 10.0001 = " + (0.050002 * 10.0001));
		System.out.println("500.00001 / 100 = " + (500.00001 / 100));		
		System.out.println(5.0010002);
		BigDecimal bd1 = new BigDecimal(5.0010);
		System.out.println(bd1);
		BigDecimal bd2 = new BigDecimal("5.0010");
		System.out.println(bd2);
		BigDecimal bd3 = BigDecimal.valueOf(5.0010);
		System.out.println(bd3);
		System.out.println(bd2.add(bd1));
		System.out.println(bd2.subtract(bd3));
		System.out.println(bd2.multiply(bd3));		
		System.out.println(bd2.divided(bd3));		
	}
}
